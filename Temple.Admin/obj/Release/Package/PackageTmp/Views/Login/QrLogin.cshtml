    <!-- inline scripts related to this page -->

    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                type: "POST", data: {}, timeout: 200000, url: "/Login/weixinImg",
                success: function (d) {
                    $("#hidtick").val(d.split("ticket=")[1]);
                    $("#weixinImg").attr("src", d);
                },
                error: function (msg) {
                    alert("用户名或密码错误，请重新输入");
                },
                beforeSend: function (msg) {

                },
                dataType: "text"
            });
        });
        //判断是否有微信扫扫
        function CheckWeiXinSCan() {

            $(document).ready(function () {
                $.ajax({
                    url: "/Login/hasScan",
                    type: "Get",
                    dataType: "text",
                    data: { tick: $("#hidtick").val(), d: new Date().getTime() },
                    error: function (XmlHttpRequest, textStatus, errorThrown) { },
                    success: function (d) {
                        console.log(d + "--" + d.length);
                        if (d != "" && d.length > 5) {
                            window.location.href = "/Login/Login?token=" + $("#hidtick").val();
                        } else {

                        }
                        

                    }

                });
            });
        }
        setInterval('CheckWeiXinSCan()', 2000);
    </script>
