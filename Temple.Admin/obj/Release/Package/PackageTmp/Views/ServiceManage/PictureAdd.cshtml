@{
    ViewBag.Title = "無極證道-管理系统-基本資料管理系統-" + ViewBag.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header position-relative">
    <h1>
        祭拜圖片維護作業
        <small>
            <i class="icon-double-angle-right"></i>
            @Html.Raw(ViewBag.PageTitle)
        </small>
    </h1>
</div>
<div class="row" ms-controller="DataAddOrUpdate">
    <input type="hidden" id="Id_pageDom" value="@ViewBag.NewDataId" />
    <div class="col-xs-12">
        <form class="form-horizontal" role="form">
             <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> 圖片 </label>
                <div class="col-sm-9">
                    <input type="file" class="input-sm" id="file" name="file" />
                        <div ms-widget="preview" id="preview_img_page"></div>
                </div>
            </div>
            <div class="form-group" ms-visible="imgTip != ''">
                <label class="col-sm-3 control-label no-padding-right"> 圖片地址 </label>
                <div class="col-sm-9">
                    <span style="word-break:break-all;" class="middle red">{{imgTip}}</span>
                    <button type="button" class="btn btn-xs" ms-click="uploadAjaxInfomationImg" ms-visible="viewImgButton">确认上传</button>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> <span class="red">*</span>圖片代號</label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.Code" maxlength="2" class="col-xs-9 col-sm-4" />
                    <span class="middle red" ms-visible="$.trim(NewModel.Code) === ''">{{errorMsg.Code}}</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"><span class="red">*</span>圖片名稱</label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.Name" class="col-xs-9 col-sm-4" />
                    <span class="middle red" ms-visible="$.trim(NewModel.Name) === ''">{{errorMsg.Name}}</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"><span class="red">*</span> 圖像型態 </label>
                <div class="col-sm-9">
                    <span><input type="radio" ms-duplex-number="NewModel.Type" value="1" />背景</span>
                    <span><input type="radio" ms-duplex-number="NewModel.Type" value="2" />上香</span>
                    <span><input type="radio" ms-duplex-number="NewModel.Type" value="3" />鮮花</span>
                    <span><input type="radio" ms-duplex-number="NewModel.Type" value="4" />水果</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"><span class="red">*</span> 狀態 </label>
                <div class="col-sm-9">
                    <span><input type="radio" ms-duplex-number="NewModel.Status" value="1" />開啟</span>
                    <span><input type="radio" ms-duplex-number="NewModel.Status" value="0" />關閉</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> 備註 </label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.Remark" class="col-xs-9 col-sm-4" />
                </div>
            </div>
            
            <div class="clearfix form-actions">
                <div class="col-md-offset-4 col-md-6">
                    <button class="btn btn-info" type="button" ms-click="addDataFun">
                        <i class="icon-ok bigger-110"></i>
                        {{buttonType}}
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="icon-undo bigger-110"></i>
                        清空
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>