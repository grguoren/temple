@{
    ViewBag.Title = "無極證道-管理系统-基本資料管理系統-稱謂資料維護作業";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header position-relative">
    <h1>
        基本資料管理系統
        <small>
            <i class="icon-double-angle-right"></i>
            稱謂資料維護作業
        </small>
    </h1>
</div>
<div class="row-fluid" ms-controller="TitleList">
    <div class="span12">
        <div class="table-responsive">
            <div class="well well-lg">
                <div class="span12">
                    <span>
                        <button type="button" class="btn btn-sm btn-success" data-target="#addUser_Modal" data-toggle="modal" ms-click="HrefSelf(Config.WebUrl + 'BasicManage/AddTitle','')">
                            <i class="icon-plus-sign"></i>
                            新增資料
                        </button>
                    </span>
                </div>
            </div>


            <table id="sample-table-1" class="table table-bordered table-hover no-margin-bottom">
                <thead>
                    <tr>
                        <th><input type="checkbox" ms-duplex-checked="changeAll" /></th>
                        <th>稱謂代號</th>
                        <th>稱謂名稱</th>
                        <th>狀態</th>
                        <th width="80px;">操作</th>
                    </tr>
                </thead>

                <tbody>
                    <tr ms-if="!ListLoading"><td colspan="15" style="text-align:center;"><i class="icon-spinner icon-spin orange bigger-125"></i></td></tr>
                    <tr ms-if="!ListNoData"><td colspan="14" style="text-align:center;">對不起，沒有數據!</td></tr>
                    <tr ms-repeat="array" ms-visible="ListLoading">
                        <td><input type="checkbox" ms-attr-value="el.Id" ms-duplex-number="changeList" /></td>
                        <td>{{el.Code}}</td>
                        <td>{{el.Name}}</td>
                        <td>{{el.Status === true? "開啟" : "閉關"}}</td>
                        <td>
                            <button title="編輯" class="btn btn-xs btn-primary" ms-click="HrefFun('@Url.Content("~/BasicManage/AddTitle/")',el.Id)"><i class="icon-cog"></i></button>
                            <button title="刪除" class="btn btn-xs btn-danger" ms-click="DeleteTitleFun(el.Id)"><i class="icon-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div ms-widget="pager,pp"></div>
        </div>
    </div>
</div>