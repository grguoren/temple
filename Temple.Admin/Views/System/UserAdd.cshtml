@{
    ViewBag.Title = "無極證道-管理系统-基本資料管理系統-" + ViewBag.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header position-relative">
    <h1>
        使用者基本資料管理
        <small>
            <i class="icon-double-angle-right"></i>
            @Html.Raw(ViewBag.PageTitle)
        </small>
    </h1>
</div>
<div class="row" ms-controller="DataAddOrUpdate">
    <input type="hidden" id="Id_pageDom" value="@ViewBag.NewDataId" />
    <div class="col-xs-12">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> <span class="red">*</span>使用者帳號</label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.Account" maxlength="30" class="col-xs-9 col-sm-4" />
                    <span class="middle red" ms-visible="$.trim(NewModel.Account) === ''">{{errorMsg.Account}}</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"><span class="red">*</span>使用者名稱</label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.Name" class="col-xs-9 col-sm-4" />
                    <span class="middle red" ms-visible="$.trim(NewModel.Name) === ''">{{errorMsg.Name}}</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"><span class="red">*</span>行動電話</label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.Mobile" class="col-xs-9 col-sm-4" />
                    <span class="middle red" ms-visible="$.trim(NewModel.Mobile) === ''">{{errorMsg.Mobile}}</span>
                </div>
            </div>
             <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"><span class="red">*</span>到職日期</label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.OnBoardDate" onclick="WdatePicker({ dateFmt: 'yyy/MM/dd', lang: 'zh-tw' })" class="col-xs-9 col-sm-4" />
                    <span class="middle red" ms-visible="$.trim(NewModel.OnBoardDate) === ''">{{errorMsg.OnBoardDate}}</span>
                </div>
            </div>
             <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">離職日期</label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.ResignationDate" onclick="WdatePicker({ dateFmt: 'yyy/MM/dd', lang: 'zh-tw' })" class="col-xs-9 col-sm-4" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> 個人相片 </label>
                <div class="col-sm-9">
                    <input type="file" class="input-sm" id="file" name="file" />
                        <div ms-widget="preview" id="preview_img_page"></div>
                </div>
            </div>
            <div class="form-group" ms-visible="imgTip != ''">
                <label class="col-sm-3 control-label no-padding-right"> 個人相片地址 </label>
                <div class="col-sm-9">
                    <span style="word-break:break-all;" class="middle red">{{imgTip}}</span>
                    <button type="button" class="btn btn-xs" ms-click="uploadAjaxInfomationImg" ms-visible="viewImgButton">确认上传</button>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"><span class="red">*</span>密碼</label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.Passwd" class="col-xs-9 col-sm-4" />
                    <span class="middle red" ms-visible="$.trim(NewModel.Passwd) === ''">{{errorMsg.Passwd}}</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"><span class="red">*</span> 狀態 </label>
                <div class="col-sm-9">
                    <span><input type="radio" ms-duplex-number="NewModel.Status" value="1" />開啟</span>
                    <span><input type="radio" ms-duplex-number="NewModel.Status" value="0" />關閉</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> 備注 </label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="NewModel.Remark" class="col-xs-9 col-sm-4" />
                </div>
            </div>

            <div class="clearfix form-actions">
                <div class="col-md-offset-4 col-md-6">
                    <button class="btn btn-info" type="button" ms-click="addDataFun">
                        <i class="icon-ok bigger-110"></i>
                        {{buttonType}}
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="icon-undo bigger-110"></i>
                        清空
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>
<script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
<script src="~/Scripts/Lib/jquery/jquery.min.js"></script>