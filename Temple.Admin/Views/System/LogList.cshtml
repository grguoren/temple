@{
    ViewBag.Title = "無極證道-管理系统-系统管理-操作日志";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header position-relative">
    <h1>
        系统管理
        <small>
            <i class="icon-double-angle-right"></i>
            操作日志
        </small>
        <small>
            <i class="icon-double-angle-right"></i>
          
        </small>
    </h1>
</div>
<div class="row-fluid" ms-controller="systemLogList">
    <div class="span12">
        <div class="table-responsive">
            <div class="well well-lg">
                <div class="span12">
                     <span>
                        描述
                    </span>
                    <span>
                        <input type="text" class="input-xs" ms-duplex="Search_Desp" />
                    </span>
                    <span>
                        模糊查询
                    </span>
                    <span>
                        <input type="text" class="input-xs" ms-duplex="Search_Title" />
                    </span>
                    <button type="button" class="btn btn-xs btn-success" ms-click="getList(1)">
                        <i class="icon-search"></i>
                        查询
                    </button>
                    <button type="button" class="btn btn-xs btn-success" ms-click="updateIndex(1)">
                        <i class="icon-search"></i>
                        更新首页
                    </button>
                  
                </div>
            </div>


            <table id="sample-table-1" class="table table-bordered table-hover no-margin-bottom">
                <thead>
                    <tr>
                        <th>操作人</th>
                        <th>时间</th>
                        <th>描述</th>
                        <th>目标</th>
                        <th>来源地址</th>
                        <th>IP地址</th>
                        <th>参数</th>
                    </tr>
                </thead>

                <tbody>
                    <tr ms-if="!ListLoading"><td colspan="15" style="text-align:center;"><i class="icon-spinner icon-spin orange bigger-125"></i></td></tr>
                    <tr ms-if="!ListNoData"><td colspan="14" style="text-align:center;">對不起,沒有數據!</td></tr>
                    <tr ms-repeat="array" ms-visible="ListLoading">
                        <td>{{el.Admin_Name}}</td>
                        <td>{{el.CreateTime| date("yyyy/MM/dd HH:mm")}}</td>
                        <td>{{el.Remark}}</td>
                        <td ms-attr-title="el.Action">{{el.Action|truncate(20,"...")}}</td>
                        <td><a ms-attr-href="el.FromUrl" target="_blank">{{el.FromUrl}}</a></td>
                        <td>{{el.FromIP}}</td>
                        <td ms-attr-title="el.Param">{{el.Param|truncate(40,"...")}}</td>
                    </tr>
                </tbody>
            </table>
            <div ms-widget="pager,pp"></div>
        </div>
    </div>
</div>