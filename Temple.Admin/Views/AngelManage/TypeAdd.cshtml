@{
    ViewBag.Title = "無極證道-管理系统-帮助中心管理-" + ViewBag.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header position-relative">
    <h1>
        帮助中心管理
        <small>
            <i class="icon-double-angle-right"></i>
            @Html.Raw(ViewBag.PageTitle)
        </small>
    </h1>
</div>
<div class="row" ms-controller="aboutTypeAddOrUpdate">
    <input type="hidden" id="aboutTypeId_pageDom" value="@ViewBag.aboutTypeId" />
    <div class="col-xs-12">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> <span class="red">*</span>标题 </label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="aboutTypeModel.Name" class="col-xs-9 col-sm-4" />
                    <span class="middle red" ms-visible="$.trim(aboutTypeModel.Name) === ''">{{errorMsg.Name}}</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> 排序 </label>

                <div class="col-sm-9">
                    <input type="text" ms-duplex="aboutTypeModel.Sort" class="input-mini" />
                    <span class="middle red" ms-visible="isNaN(aboutTypeModel.Sort) || aboutTypeModel.Sort === ''">{{errorMsg.Sort}}</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> 栏目介绍 </label>

                <div class="col-sm-9">
                    <textarea id="infoTypeContent_page" name="content" ms-widget="kindeditor" ms-duplex="aboutTypeModel.Remark"></textarea>
                </div>
            </div>

            <div class="clearfix form-actions">
                <div class="col-md-offset-4 col-md-6">
                    <button class="btn btn-info" type="button" ms-click="addAboutTypeFun">
                        <i class="icon-ok bigger-110"></i>
                        {{buttonType}}
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="icon-undo bigger-110"></i>
                        清空
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>