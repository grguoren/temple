@{
    ViewBag.Title = "無極證道-管理系统-帮助中心管理-帮助中心列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header position-relative">
    <h1>
        帮助中心管理
        <small>
            <i class="icon-double-angle-right"></i>
            帮助中心列表
        </small>
    </h1>
</div>
<div class="row-fluid" ms-controller="aboutList">
    <input type="hidden" id="aboutTypeId_pageDom" value="@ViewBag.aboutTypeId" />
    <div class="span12">
        <div class="table-responsive">
            <div class="well well-lg">
                <div class="span12">
                    <button type="button" class="btn btn-sm btn-success" ms-click="HrefSelf(Config.WebUrl + 'FaqManage/Add','')">
                        <i class="icon-plus-sign"></i>
                        添加
                    </button>
                    <button type="button" class="btn btn-info btn-sm" ms-click="VerifyAboutAllFun(1)"><i class="icon-eye-open"></i>批量审核</button>
                    <button type="button" class="btn btn-warning btn-sm" ms-click="VerifyAboutAllFun(0)"><i class="icon-eye-close"></i>取消审核</button>
@*                    <button type="button" class="btn btn-info btn-sm" ms-click="RecommendAboutAllFun(1)"><i class="icon-heart"></i>批量推荐</button>
                    <button type="button" class="btn btn-warning btn-sm" ms-click="RecommendAboutAllFun(0)"><i class="icon-heart-empty"></i>取消推荐</button>
                    <button type="button" class="btn btn-info btn-sm" ms-click="TopAboutAllFun(1)"><i class="icon-heart"></i>批量置顶</button>
                    <button type="button" class="btn btn-warning btn-sm" ms-click="TopAboutAllFun(0)"><i class="icon-heart-empty"></i>取消置顶</button>*@
                    <span>
                        <button type="button" class="btn btn-danger btn-sm" ms-click="DeleteAboutAllFun"><i class="icon-trash"></i>批量删除</button>
                    </span>
                    
                </div>
                <div class="hr"></div>
                <div class="span12">
                    <span>栏目:</span>
                    <span>
                        <select class="input-sm" ms-duplex="Search_TypeId"><option value="0">全部</option><option ms-repeat="abouttypeList" ms-attr-value="el.Id">{{el.Name}}</option></select>
                    </span>
                    <span>状态:</span>
                    <span>
                        <select class="input-sm" ms-duplex="Search_StatusId">
                            <option value="0">全部</option>
                            <option value="已审核">已审核</option>
                            <option value="未审核">未审核</option>
                        </select>
                    </span>
                    <span>|</span>
                    <span>
                        <select class="input-sm" ms-duplex="Search_SearchTypeId">
                            <option value="1">标题</option>
                            <option value="2">管理员</option>
                            <option value="3">修改人</option>
                        </select>
                    </span>
                    <span>
                        <input type="text" class="input-xs" ms-duplex="Search_Title" />
                    </span>
                    <button type="button" class="btn btn-xs btn-success" ms-click="getList(1)">
                        <i class="icon-search"></i>
                        查询
                    </button>
                    <button type="button" class="btn btn-xs btn-danger" ms-click="Search_Clear">
                        <i class="icon-repeat"></i>
                        清空
                    </button>
                </div>
            </div>


            <table id="sample-table-1" class="table table-bordered table-hover no-margin-bottom">
                <thead>
                    <tr>
                        <th width="20px;"><input type="checkbox" ms-duplex-checked="changeAll" /></th>
                        <th>ID</th>
                        <th>所属栏目</th>
                        <th width="30%;">标题</th>
                        <th>排序</th>
                        <th>发布人</th>
                        <th>发布时间</th>
                        <th>审核</th>
                        <th>推荐</th>
                        <th>置顶</th>
                        <th>修改人</th>
                        <th>修改时间</th>
                        <th width="80px;">操作</th>
                    </tr>
                </thead>

                <tbody>
                    <tr ms-if="!ListLoading"><td colspan="14" style="text-align:center;"><i class="icon-spinner icon-spin orange bigger-125"></i></td></tr>
                    <tr ms-if="!ListNoData"><td colspan="14" style="text-align:center;">对不起,没有数据!</td></tr>
                    <tr ms-repeat="array" ms-visible="ListLoading">
                        <td><input type="checkbox" ms-attr-value="el.Id" ms-duplex-number="changeList" /></td>
                        <td>{{el.Id}}</td>
                        <td><select class="input-small" ms-duplex="el.TypeId" ms-each-elem="abouttypeList" style="height:26px;line-height:26px;"><option ms-attr-value="elem.Id">{{elem.Name}}</option></select><button title="修改分类" class="btn btn-xs btn-primary" ms-click="UpdateTypeFun(el.Id,el.TypeId)">修改分类</button></td>
                        <td>{{el.Title}}</td>
                        <td><input type="text" ms-duplex="el.Sort" style="width:40px;" /><a title="修改排序" href="javascript:;" ms-click="EditSort(el.Id,el.Sort)">修改</a> </td>
                        <td>{{el.AddName}}</td>
                        <td>{{el.AddTime| date("yyyy/MM/dd HH:mm")}}</td>
                        <td><span ms-visible="el.IsVerify != null && (el.TypeId != 115 && el.TypeId != 116 )" ms-class-red="el.IsVerify == 1">{{el.IsVerify == 1 ? "已审核" : "未审核"}}</span>
                            <span ms-visible="el.IsBack != null && (el.TypeId == 115 || el.TypeId == 116 )" ms-class-red="el.IsBack == 1">{{el.IsBack == 1 ? "已审核" : "未审核"}}</span>
                        </td>
                        <td><span ms-visible="el.IsRecommend != null" ms-class-red="el.IsRecommend == 1">{{el.IsRecommend == 1 ? "是" : "否"}}</span></td>
                        <td><span ms-visible="el.IsTop != null" ms-class-red="el.IsTop == 1">{{el.IsTop == 1 ? "是" : "否"}}</span></td>
                        <td>{{el.UpdateName}}</td>
                        <td>{{el.UpdateTime| date("yyyy/MM/dd HH:mm")}}</td>
                        <td>
                            <a class="btn btn-xs btn-primary" target="_blank" ms-attr-href="'@Url.Content("~/FaqManage/Add/")'+el.Id" role="button" title="编辑"><i class="icon-cog"></i></a>
                            <button title="删除" class="btn btn-xs btn-danger" ms-click="DeleteAboutFun(el.Id)"><i class="icon-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div ms-widget="pager,pp"></div>
        </div>
    </div>
</div>